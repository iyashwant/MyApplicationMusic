<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/song_bg"
    android:layout_height="match_parent"
    tools:context="com.example.iyashwant.myapplicationmusic.SongActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/lis"
        android:background="@drawable/light_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#fff"
            android:paddingLeft="30dp"
            android:text="nfkvnkrvrgv"
            android:textSize="35dp"
            android:paddingTop="50dp"
            android:id="@+id/Aname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="rfrvfrffrfr"
            android:paddingLeft="30dp"
            android:textColor="@color/whitel"
            android:id="@+id/artistName"
            android:layout_below="@+id/Aname"/>
    </LinearLayout>



        <ListView
            android:layout_below="@id/lis"
            android:layout_marginTop="10sp"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_above="@+id/tool"
            android:layout_weight="0.84" />

    <android.support.v7.widget.Toolbar

        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:id="@+id/tool"
        android:background="@color/colorPrimary"
        android:layout_height="70sp"
        android:layout_gravity="bottom"
        android:elevation="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selected_track_title"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="9dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="9dp" />


                <ImageButton
                    android:id="@+id/play"
                    android:src="@drawable/ic_play_arrow_grey_700_24dp"
                    android:layout_gravity="center"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:background="@color/yellow"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp" />


            </RelativeLayout>

            <SeekBar
                android:id="@+id/sBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#10000000"
                android:layout_gravity="center" />

        </LinearLayout>


    </android.support.v7.widget.Toolbar>

</RelativeLayout>
